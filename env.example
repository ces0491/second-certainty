# Database Configuration
# For development (SQLite)
# DATABASE_URL=sqlite:///./second_certainty.db

# For production (PostgreSQL)
# Format: postgresql://username:password@host:port/database_name
DATABASE_URL=postgresql://username:password@localhost:5432/second_certainty

# Security Configuration
# Generate a secure secret key using: openssl rand -hex 32
SECRET_KEY=your-super-secret-key-change-this-in-production

# JWT Token Configuration
ACCESS_TOKEN_EXPIRE_MINUTES=30

# Application Configuration
APP_NAME="Second Certainty Tax Tool"
APP_VERSION="1.0.0"
DEBUG=False

# CORS Configuration (for frontend)
ALLOWED_ORIGINS=["http://localhost:3000", "https://your-frontend-domain.com"]

# API Configuration
API_V1_STR="/api"

# Email Configuration (for future features)
# SMTP_TLS=True
# SMTP_PORT=587
# SMTP_HOST=smtp.gmail.com
# SMTP_USER=your-email@gmail.com
# SMTP_PASSWORD=your-email-password

# External API Configuration
# SARS_API_BASE_URL=https://www.sars.gov.za
# SARS_SCRAPER_ENABLED=True

# Logging Configuration
LOG_LEVEL=INFO

# Cache Configuration (for future implementation)
# REDIS_URL=redis://localhost:6379

# File Upload Configuration
MAX_UPLOAD_SIZE_MB=10
UPLOAD_FOLDER=./uploads

# Rate Limiting (requests per minute)
RATE_LIMIT_PER_MINUTE=60

# Development/Production Mode
ENVIRONMENT=development